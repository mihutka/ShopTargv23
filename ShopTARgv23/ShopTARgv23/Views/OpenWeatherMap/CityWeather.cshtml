@model ShopTARgv23.Models.OpenWeatherMap.WeatherDetailsViewModel

<div class="container my-5">
    <div class="card shadow">
        <div class="card-header bg-white text-balck text-center">
            <h2>Weather in @Html.DisplayFor(model => model.City) (@Html.DisplayFor(model => model.CountryCode))</h2>
        </div>
        <!--https://getbootstrap.com/-->
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h4>Main Information</h4>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <strong>Temperature:</strong> @Html.DisplayFor(model => model.Temperature) °C
                        </li>
                        <li class="list-group-item">
                            <strong>Feels Like:</strong> @Html.DisplayFor(model => model.FeelsLike) °C
                        </li>
                        <li class="list-group-item">
                            <strong>Min Temperature:</strong> @Html.DisplayFor(model => model.MinTemperature) °C
                        </li>
                        <li class="list-group-item">
                            <strong>Max Temperature:</strong> @Html.DisplayFor(model => model.MaxTemperature) °C
                        </li>
                        <li class="list-group-item">
                            <strong>Weather:</strong> @Html.DisplayFor(model => model.WeatherMain) - @Html.DisplayFor(model => model.WeatherDescription)
                        </li>
                    </ul>
                </div>

                <div class="col-md-6">
                    <h4>Atmospheric Data</h4>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <strong>Humidity:</strong> @Html.DisplayFor(model => model.Humidity)%
                        </li>
                        <li class="list-group-item">
                            <strong>Pressure:</strong> @Html.DisplayFor(model => model.Pressure) hPa
                        </li>
                        <li class="list-group-item">
                            <strong>Cloudiness:</strong> @Html.DisplayFor(model => model.Cloudiness)%
                        </li>
                        <li class="list-group-item">
                            <strong>Wind Speed:</strong> @Html.DisplayFor(model => model.WindSpeed) m/s
                        </li>
                        <li class="list-group-item">
                            <strong>Wind Direction:</strong> @Html.DisplayFor(model => model.WindDirection)°
                        </li>
                    </ul>
                </div>
            </div>

            <hr />

            <div class="row mt-4">
                <div class="col-md-6">
                    <h4>Sun Information</h4>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <strong>Sunrise:</strong> @Html.DisplayFor(model => model.Sunrise)
                        </li>
                        <li class="list-group-item">
                            <strong>Sunset:</strong> @Html.DisplayFor(model => model.Sunset)
                        </li>
                    </ul>
                </div>
                <div class="col-md-6 text-center">
                    <h4>Summary</h4>
                    <!--https://fontawesome.com/icons-->
                    <i class="fas fa-cloud-sun-rain" style="font-size: 50px; color: black;"></i>
                    <p class="mt-3">
                        @Html.DisplayFor(model => model.WeatherMain): @Html.DisplayFor(model => model.WeatherDescription)
                    </p>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" asp-controller="OpenWeatherMap" class="btn btn-white">Back</a>
        </div>
    </div>
</div>
