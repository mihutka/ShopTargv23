@model ShopTARgv23.Models.OpenWeatherMap.OpenWeatherViewModel

<div class="container">
    <h2>Forecast for the selected city</h2>
    <h2>@Html.DisplayFor(model => model.Name)</h2>
    <hr />
    <dl class="row text-light">
        <div class="form-group row">
            <label asp-for="Temperature" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Temperature) °C
        </div>

        <div class="form-group row">
            <label asp-for="feels_like" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.feels_like) °C
        </div>

        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Description)
        </div>

        <div class="form-group row">
            <label asp-for="Pressure" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Pressure)
        </div>

        <div class="form-group row">
            <label asp-for="Humidity" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Humidity)
        </div>

        <div class="form-group row">
            <label asp-for="WindSpeed" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.WindSpeed)
        </div>
    </dl>
</div>

<div class="container">
    <form method="get">
        <button asp-controller="openWeathers" asp-action="Index" class="btn btn-success">Index</button>
    </form>
</div>
